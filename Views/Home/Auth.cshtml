                {
                    for (var i = 0; i < 6; i++)
                    {
                        <tr>
                            <td>
                                @ViewBag.Name[i]
                            </td>
                            <td>
                                <a href="@ViewBag.Url1[i]"> Go to event </a>
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>

        <div id="right" style="display:inline-block;width:50%;">

            @if (ViewBag.Artwork != null)
            {

                for (int i = 0; i < ViewBag.Artwork.Count; i++)
                {
